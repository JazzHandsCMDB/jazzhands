SHSCRIPTS=generate-and-sync ssh-wrap
PLSCRIPTS=generate-zones

USER_DIR=/usr/local/sbin
MANDIR=/usr/local/man
USER_SCRIPTS=zonegen-force
MAN8=zonegen-force

BINDIR = /prod/zonegen/libexec

all:

install:
	install -d -o root -g bin -m 755 $(DESTDIR)/$(BINDIR)
	install -d -o root -g bin -m 755 $(DESTDIR)/$(USER_DIR)
	install -d -o root -g bin -m 755 $(DESTDIR)/$(MANDIR)/man8
	@for script in $(SHSCRIPTS) ; do \
		install -o root -g bin -m 555 $$script.sh $(DESTDIR)/$(BINDIR)/$$script ;\
	done
	@for script in $(PLSCRIPTS) ; do \
		install -o root -g bin -m 555 $$script.pl $(DESTDIR)/$(BINDIR)/$$script ;\
	done
	@for script in $(USER_SCRIPTS) ; do \
		install -o root -g bin -m 555 $$script.sh $(DESTDIR)/$(USER_DIR)/$$script ;\
	done
	@for page in $(MAN8) ; do \
		install -o root -g bin -m 555 $$page.8 $(DESTDIR)/$(MANDIR)/man8/$$page.8 ;\
	done


clean:
